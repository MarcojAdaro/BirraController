import serial
import time
ser = serial.Serial('/dev/ttyUSB0',115200)

print "HOLA"

file = open ("/var/www/html/Pantalla/php/Archivo.txt",'r+')

print "HOLA"
file.write ("   ")
while 1:
	print "HOLA"
	file.seek(0)
	read_serial=ser.readline(5)
	file.write (read_serial)
	print read_serial
	time.sleep(1)
file.close()
